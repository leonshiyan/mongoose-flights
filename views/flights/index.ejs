<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flight List</h1>
  <table id ="list">
    <thead>
      <tr>
        <th>Flight Number</th>
        <th>Origin</th>
        <th>Desination</th>
        <th>Departure Time</th>
        <th>Arrival Time</th>
        <th>On Time</th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <%# Write the line of EJS to iterate over movies using forEach %>
      <% flights.forEach(flight => { %> 
        <tr>
          <td><%= flight.flightNumber %></td>
          <td><%= flight.origin %></td>
          <td><%= flight.destination %></td>
          <td><%= flight.departureTime %></td>
          <td><%= flight.arrivalTime %></td>
          <%# finish the ternary expression to display 'Yes' or 'Nope' %> 
          <td><%= flight.ontime ?'YES':'NO' %></td>
        </tr>
      <%# Close the forEach using EJS here %>
      <% }) %> 
    </tbody>
  </table>
</main>

