<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="flight-number-input">Flight Number:</label>
    <input type="text" name="flightNumber" id="flight-number-input">

    <label for="origin-input">Origin Place:</label>
    <input type="text" name="origin" id="origin-input">

    <label for="destination-input">Destination Place:</label>
    <input type="text" name="destination" id="destination-input">

    <label for="departure-time-input">Departure Time:</label>
    <input type="date" name="departureTime" id="departure-time-input" min="2023-01-01" max="2023-01-31">

    <label for="arrival-time-input">Arrival Time:</label>
    <input type="date" name="arrivalTime" id="arrival-time-input" min="2023-01-01" max="2023-01-31">
    
    <label for="ontime-checkbox">Flight Ontime:</label>
    <input type="checkbox" name="ontime" id="ontime-checkbox" checked>
    <button type="submit">Add Flight</button>
  </form>
</main>
<%- include("../partials/footer") %>